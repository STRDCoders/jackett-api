{
  "name": "jackettapi",
  "version": "1.0.0",
  "description": "An api for 'Jackett' server requests",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -sourcemap -p ./tsconfig.json",
    "run": "node -r source-map-support/register dist/src/index.js",
    "start": "npm run build && npm run run",
    "test": "nyc mocha -r ts-node/register test/**/*.spec.ts --exit",
    "depcheck": "depcheck --ignores \"source-map-support,ts-node,@types/chai-http,prettier,pretty-quick,eslint-plugin-jsdoc\"",
    "lint": "eslint \"./{src,test}/**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/STRDCoders/jackett-api.git"
  },
  "keywords": [
    "jackett",
    "api",
    "sonarr",
    "radarr",
    "plex"
  ],
  "author": "STRDcoders",
  "license": "Apache-2.0",
  "dependencies": {
    "axios": "^0.21.1",
    "depcheck": "^1.4.0",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.1.1",
    "url-join": "^4.0.1",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/chai-as-promised": "^7.1.3",
    "@types/chai-http": "^4.2.0",
    "@types/sinon": "^9.0.10",
    "@types/mocha": "^8.2.1",
    "@types/sinon-chai": "^3.2.5",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "chai": "^4.3.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.14.0",
    "eslint-plugin-jsdoc": "^32.0.2",
    "husky": "^5.1.3",
    "mocha": "^8.2.1",
    "prettier": "2.2.1",
    "pretty-quick": "^3.1.0",
    "sinon": "^9.2.4",
    "sinon-chai": "^3.5.0",
    "typescript": "^4.1.5"
  },
  "nyc": {
    "include": [
      "**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
